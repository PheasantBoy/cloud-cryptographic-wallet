{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ]
}